@model SISONKE_Invoicing_ASPNET.Areas.SecurityServices.Models.RegistrationVM

@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/SecurityServices/_SecurityServicesLayout.cshtml";
}


<main>
    <div class="container">

      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

              <div class="d-flex justify-content-center py-4">
                <a href="~/Home/Index" class="logo d-flex align-items-center w-auto">
                  <img src="~/images/inv.png" alt="">
                  <span class="d-none d-lg-block">SISONKE INVOICING</span>
                </a>
              </div>

              <div class="card mb-3">

                <div class="card-body">

                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                    <p class="text-center small">Enter your personal details to create account</p>
                  </div>

                  <form class="row g-3 needs-validation" asp-area="SecurityServices" asp-controller="UserManager" asp-action="Register" method="post" novalidate>
                      <div class="col-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (ViewBag.POSTresultIsSuccessStatusCode == false)
                        {
                            <div id="Error" style="color:red"><p>"ERROR: Username or password not VALID."</p></div>
                        }
                    </div>
                    <div class="col-12">
                      <label asp-for="FirstName" class="form-label">Firstname</label>
                      <input type="text" name="FirstName" asp-for="FirstName" class="form-control" id="FirstName" required>
                      <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                      <label asp-for="LastName" class="form-label">Lastname</label>
                      <input type="text" name="LastName" asp-for="LastName" class="form-control" id="LastName" required>
                      <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                      <label asp-for="UserName" class="form-label">UserName</label>
                      <input type="text" name="UserName" asp-for="UserName" class="form-control" id="UserName" required>
                      <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                      <label asp-for="Email" class="form-label">Email</label>
                      <input type="email" name="Email" asp-for="Email" class="form-control" id="Email" required>
                      <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                     <div class="col-12">
                      <label asp-for="Address" class="form-label">Address</label>
                      <input type="text" name="Address" asp-for="Address" class="form-control" id="Address" required>
                      <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                      <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                      <input type="text" name="PhoneNumber" asp-for="PhoneNumber" class="form-control" id="PhoneNumber" required>
                      <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                      <label asp-for="Password" class="form-label">Password</label>
                      <input type="password" name="Password" asp-for="Password" class="form-control" id="Password" required>
                      <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                      <button class="btn btn-primary w-100" type="submit">Create Account</button>
                    </div>
                    <div class="col-12">
                      <p class="small mb-0">Already have an account? <a href="~/SecurityServices/UserManager/Login">Log in</a></p>
                    </div>
                  </form>

                </div>
              </div>

              <div class="credits">
                <a href="~/Home/Index">Go back Home</a>
              </div>

            </div>
          </div>
        </div>

      </section>

    </div>
  </main>

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

